{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.96",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "classnames": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sass": "^1.75.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --silent",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --coverage --silent --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/react-hooks": "^8.0.1",
    "jest": "^29.7.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/components/*.tsx",
      "!**/node_modules/**",
      "!**/src/test-utils/**",
      "!**/src/index.tsx",
      "!src/reportWebVitals.ts" 
    ],
    "coverageThreshold": {
        "global": {
            "statements": 80,
            "branches": 80,
            "functions": 80,
            "lines": 80
        }
    }
  }
}
